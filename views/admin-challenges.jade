doctype html
html
  head
    title Admin Challenge List
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    .container.mt-5
      h1.text-center.mb-4 Challenge Management

      if challenges.length
        table.table.table-bordered.table-striped
          thead
            tr
              th Random Code
              th Title
              th Price
              th Update Price
              th Deactivate
          tbody
            each challenge in challenges
              tr
                td= challenge.randomCode
                td= challenge.title
                td â‚¹#{challenge.price}
                td
                  form(method="GET", action="/gym/api/admin/update-price")
                    input(type="hidden", name="code", value=challenge.randomCode)
                    .input-group
                      input.form-control(type="number", step="0.01", name="price", placeholder="New Price", required)
                      button.btn.btn-primary(type="submit") Update
                td
                  form(method="GET", action="/gym/api/admin/deactivate-price")
                    input(type="hidden", name="code", value=challenge.randomCode)
                    button.btn.btn-danger(type="submit") Deactivate
      else
        p No challenges found.

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
