doctype html
html
  head
    title Admin Coupons
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 20px;
      }
      .container {
        max-width: 1200px;
        margin: 0 auto;
      }
      h1 {
        text-align: center;
        color: #333;
      }
      .search-bar {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
        gap: 10px;
      }
      .search-bar input {
        width: 100%;
        max-width: 400px;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 16px;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #fff;
      }
      th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
      }
      th {
        background-color: #4CAF50;
        color: white;
      }
      .no-results {
        text-align: center;
        color: #888;
        margin-top: 20px;
      }
  body
    .container
      h1 Admin Coupons

      .search-bar
        input#searchInput(type="text", placeholder="Search coupon code...")

      if coupons && coupons.length
        table
          thead
            tr
              th Coupon Code
              th Discount
              th Type
              th Valid From
              th Valid To
              th Active
          tbody
            each coupon in coupons
              tr(data-code=coupon.coupon_code.toLowerCase())
                td #{coupon.coupon_code}
                td #{coupon.discount_amount}
                td #{coupon.discount_type}
                td #{coupon.valid_from}
                td #{coupon.valid_to}
                td #{coupon.is_active ? 'Yes' : 'No'}
      else
        p.no-results#noResultsMessage No coupons available

    script.
      document.addEventListener("DOMContentLoaded", function () {
        const searchInput = document.getElementById("searchInput");
        const rows = document.querySelectorAll("tbody tr");
        const noResults = document.getElementById("noResultsMessage");

        searchInput.addEventListener("input", function () {
          const query = this.value.toLowerCase();
          let visible = 0;

          rows.forEach(row => {
            const code = row.getAttribute("data-code");
            if (code.includes(query)) {
              row.style.display = "table-row";
              visible++;
            } else {
              row.style.display = "none";
            }
          });

          noResults.style.display = visible === 0 ? "block" : "none";
        });
      });
